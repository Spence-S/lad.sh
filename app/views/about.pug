
extends layout

block body
  .jumbotron.mb-0
    .container
      h1.display-3= `${t('About')} ${config.appName}`
      p= t("Dependencies and development dependencies are listed below.")
  .container.pt-5
    .row
      .col-12
        ul.list-group
          h2.mb-4= t('Dependencies')
          each dep in Object.keys(config.pkg.dependencies)
            a(href=`https://www.npmjs.com/package/${dep}`, target="_blank").list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center
              = dep
              span.badge.badge-pill= config.pkg.dependencies[dep]
    .row
      .col-12
        ul.list-group
          h2.mb-4= t('Development Dependencies')
          each dep in Object.keys(config.pkg.devDependencies)
            a(href=`https://www.npmjs.com/package/${dep}`, target="_blank").list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center
              = dep
              span.badge.badge-pill= config.pkg.devDependencies[dep]
